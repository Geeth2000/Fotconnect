<?xml version="1.0" encoding="utf-8"?>
<!--
This XML defines the layout for the Article Detail Fragment.
It uses a ScrollView as the root to allow scrolling if the content is long.
The content is arranged vertically within a LinearLayout.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- LinearLayout to arrange the article details vertically. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TextView for displaying the full article title. -->
        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000" /> <!-- Black text color -->

        <!-- TextView for displaying the publication date. -->
        <TextView
            android:id="@+id/detailDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="4dp" /> <!-- Gray text color, 4dp top margin -->

        <!-- ImageView for displaying the main article image. -->
        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp" /> <!-- 8dp top margin, scales image to crop to fit boundaries -->

        <!-- TextView for displaying the full content of the article. -->
        <TextView
            android:id="@+id/detailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginTop="12dp" /> <!-- Dark gray text color, 12dp top margin -->

    </LinearLayout>
</ScrollView>
